<!DOCTYPE html>
<html>
<head>
  <title>Quote8</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="top-bar">
	    <ul class="title-area">
	      <!-- Title Area -->
	      <li class="name">
	        <h1>
	          <a href="#">
	          	<%= link_to image_tag("quote8_logo_white.png", :border=>0, :width=>'30px'), :class => 'logo_image' %> 
	             Quote8
	          </a>
	        </h1>
	      </li>
	      <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
	    </ul>

	      <section class="top-bar-section">
	      <!-- Right Nav Section -->
	      <ul class="right">
	        <li class="divider"></li>
	        <li><a href="#">Log In</a></li>
	          <li><a href="#">Sign Up</a></li>
	      </ul>
	    </section>
	  </nav>

    <%= yield %>

	  <!-- Footer -->

  <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-6 columns">
          <p>&copy; "8"</p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><%= link_to 'All Quotes Page', bookmarks_path %></li>
            <li><%= link_to 'About', about_path %></li> 
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <!-- End Footer -->
</body>
</html>
